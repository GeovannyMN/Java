/* Desenvolva um algoritmo em Java que leia um número inteiro e imprima o seu
antecessor e seu sucessor */

import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	
	Scanner entrada = new Scanner(System.in);
	
	int valor;
	
	System.out.printf("Informe o número inteiro\n");
    valor = entrada.nextInt();
	
	System.out.printf("Seu número %d tem como sucessor %d e como antecessor %d\n", valor, valor+1, valor-1);

	}

}
