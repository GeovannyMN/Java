/*Escreva um programa que, com base em uma temperatura em graus celsius, 
a converta e exiba em Kelvin (K), Réaumur (Re), Rankine (Ra) e Fahrenheit (F), 
seguindo as fórmulas: 
F = C * 1.8 + 32;
K = C + 273.15;
Re = C * 0.8;
Ra = C * 1.8 + 32 + 459.67*/

import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
		
		Scanner entrada = new Scanner(System.in);
		float tempCelsius;
		
		System.out.println("Insira o valor da temperatura em graus Celsius");
		tempCelsius = entrada.nextFloat();
		
		System.out.printf("A temperatura em Kelvin é: %.2f° K\n", tempCelsius + 273.15);
		System.out.printf("A temperatura em Réamour é: %.2f° Re\n", tempCelsius * 0.8);
		System.out.printf("A temperatura em Rankine é: %.2f° Ra\n", tempCelsius * 1.8 + 32 + 459.67);
	    System.out.printf("A temperatura em Fahrenheit é: %.2f° F\n", tempCelsius * 1.8 + 32);
	}
}
