/*Crie um algoritmo que leia o valor do salário mínimo e o valor do salário de um usuário,
calcule a quantidade de salários mínimos esse usuário ganha e imprima o resultado.
(1SM=R$788,00)*/

import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	
	Scanner entrada = new Scanner(System.in);
	float salarioMinimo;
	float salarioUsuario;
	int quantidadeEntrada;
	
	System.out.printf("Informe o valor do salário mínimo\n");
	salarioMinimo = entrada.nextFloat();
	
	System.out.printf("Informe o valor do salário do usuário\n");
	salarioUsuario = entrada.nextFloat();
	
	System.out.printf("Seu salário equivale a %.2f salários mínimos\n", salarioUsuario / salarioMinimo );

	}
}
