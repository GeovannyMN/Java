/*Fazer um programa que imprima a média aritmética dos números 8,9 e 7. A média dos
números 4, 5 e 6. A soma das duas médias. A média das médias.*/

import java.util.Scanner;

public class Main
{
	public static void main(String[] args) {
	    
	float primeiraMedia = media(8, 9, 7);
	float segundaMedia = media(4, 5, 6);
	float somaDasMedias = primeiraMedia + segundaMedia;
	float mediaDasMedias = somaDasMedias / 2;
	
	System.out.printf("A média das primeiras notas vale %.1f\n", primeiraMedia);
    System.out.printf("A média das segundas notas vale %.1f\n", segundaMedia);    
	System.out.printf("A soma das médias vale %.1f\n", somaDasMedias);	
	System.out.printf("A média das médias vale %.1f\n", mediaDasMedias);
	}
	
	public static float media(int a, int b, int c)
	{
	    return (a + b + c)/3;
	}
}
